    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "lint-staged": "^7.2.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit-msg.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
